# movement
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'

# ls
alias ls='ls --color=auto --group-directories-first'
alias l='ls -hF --group-directories-first'
alias la='ls -lhFA --group-directories-first'
alias ll='ls -lhF --group-directories-first'

# grep
alias grep='grep --color=auto'
alias egrep='grep -E'
alias fgrep='grep -F'
